{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "skipLibCheck": true,
    "pretty": true,
    "forceConsistentCasingInFileNames": true,
    "inlineSourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@scripts/*":["scripts/*"]
    }
  },
  "exclude": ["node_modules"]
}
